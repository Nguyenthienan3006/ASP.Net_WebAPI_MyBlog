@{
    Layout = "~/Views/Admin/Shared/_AdminLayout.cshtml";
}
<div style="margin: 50px">
    <form class="px-4 py-3" method="post">
        <div class="form-group">
            <input name="Title" type="text" class="form-control" id="exampleDropdownFormEmail1" placeholder="Post Tittle">
        </div>

        <div class="form-group">
            <textarea style="height: 200px" name="Content" type="text" class="form-control form-control-lg" id="exampleDropdownFormEmail1" placeholder="Post Content"></textarea>
        </div>

        <div class="form-group">
            <select name="CategoryId" class="form-control" id="exampleDropdownFormEmail1" placeholder="Post Content">
                @foreach (var item in ViewBag.CategoriesList)
                {
                    <option value="@item.Id">@item.Name</option>
                }
            </select>
        </div>


        <button type="submit" class="btn btn-primary btn-block">Add Post</button>
    </form>


</div>